FROM golang:alpine

LABEL maintainer="guillaume.penaud@gmail.com"

RUN \
  apk add --no-cache git openssh-client curl &&\
  mkdir /application

WORKDIR /application

RUN \
  curl -fLo install.sh https://raw.githubusercontent.com/cosmtrek/air/master/install.sh &&\
  chmod +x install.sh &&\
  sh install.sh &&\
  cp ./bin/air /bin/air

CMD air